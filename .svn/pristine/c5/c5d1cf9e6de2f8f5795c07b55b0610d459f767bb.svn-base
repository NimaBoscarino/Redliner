@model IEnumerable<Hatfield.WebMap.Domain.BienHoaData.CLEANUP_LEVELS>

@{
    ViewBag.Title = "Site DU Soil/Sediment Exceedance Limits";

    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getSiteSpecificLayoutPath();

    Hatfield.WebMap.Repositories.DUOrigionalLimitRepository origLimitRepo = new Hatfield.WebMap.Repositories.DUOrigionalLimitRepository();
}

<h2>@ViewBag.Title</h2>
@*
    <p>
        <a href="#">modify limits by land-use</a>
    </p>
*@
<table class="table table-bordered table-condensed table-striped table-hover" style="width: auto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DU)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LandUse)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Matrix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TEQLimit)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(x => x.DU))
    {
        var origLimit = origLimitRepo.FetchAll().Where(x => x.OBJECTID == item.OBJECTID).FirstOrDefault();
        string rowClass = "";
        
        <tr class="@rowClass">
            <td>
                @Html.DisplayFor(modelItem => item.DU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LandUse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matrix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TEQLimit)
                @if (origLimit != null && origLimit.OrigionalLimit != null)
                {
                    <span>(Original: @origLimit.OrigionalLimit.Value.ToString("N2"))</span>
                }
            </td>


            <td>
                @Html.ActionLink("Details", "Details", new { id = item.OBJECTID }) | 
                @Html.ActionLink("Edit DU Soil/Sediment Exceedance Limit", "Edit", new { id = item.OBJECTID })
                

            </td>
        </tr>
    }

</table>

