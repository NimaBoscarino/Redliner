<div class="row">
    <div class="col-md-3"><img src="@Url.Content("~/images/USAID_logo.jpg")" /></div>
    <div class="col-md-7 appTitle">@Html.Raw(ViewBag.site.DisplayTitle)</div>
    <div class="col-md-1 appLogout">
    @if ((ViewBag.site as Hatfield.WebMap.Domain.WebMappingSite).RequiresAuthentication && Context.User.Identity.IsAuthenticated)
    { 
    <a href="@Url.Action("Logout", "Home")" class="btn btn-default"><i class="glyphicon glyphicon-off"></i> Log Out</a>
    }
    </div>
        
</div>
@if (false && (ViewBag.site as Hatfield.WebMap.Domain.WebMappingSite).RequiresAuthentication && Context.User.Identity.IsAuthenticated)
{ 
    <div class="row">
    <div class="col-md-12 btn-group">
        <a href="@Url.Action("Index", "Home")" class="btn btn-default"><i class="glyphicon glyphicon-map-marker"></i> Web GIS Map</a>
        <a href="@Url.Action("Index", "BienHoaData")" class="btn btn-default"><i class="glyphicon glyphicon-dashboard"></i> Site DU Soil/Sediment Exceedance Limits</a>
     </div>
</div>
}