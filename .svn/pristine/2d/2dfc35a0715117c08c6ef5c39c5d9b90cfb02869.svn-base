@{
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getViewLayoutPath();
    ViewBag.Title = site.DisplayTitle; 

    
}
@section HeaderScriptsArea
{
    @{        
        Html.RenderPartial(site.Map_HeaderScriptsAreaControl, site);
    } 
}

<div class="row">
    <div class="col-md-12">
        <div id="map-loading-spacer" style="display: inline;"><span class="glyphicon "></span></div>        
    </div>
    
    <div class="col-md-12">
        <div id="map">
            <div class="map-loading-icon feature-query-loading-icon hidden" style="position: absolute; left: 50px; top: 5px; padding: 5px; width: 90px; background-color: white; z-index: 999; ">Loading... <img src="@Url.Content("~/images/loading-spinner.gif")" width="14" height="14" /></div>        
            
        </div>
      
    </div>
</div>
