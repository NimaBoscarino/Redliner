@{
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getViewLayoutPath();
    ViewBag.Title = site.DisplayTitle;


}
@section HeaderScriptsArea
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btn-Bennett").click(function () {
                $(".btn-Bissette").removeClass('btn-success'); $(".btn-Bennett").find('i').removeClass('glyphicon-check'); $(".btn-Bissette").find('i').addClass('glyphicon-unchecked');
                $(".btn-Cowie").removeClass('btn-success'); $(".btn-Cowie").find('i').removeClass('glyphicon-check'); $(".btn-Cowie").find('i').addClass('glyphicon-unchecked');
                $(".btn-Bennett").addClass('btn-success'); $(".btn-Bennett").find('i').addClass('glyphicon-check'); $(".btn-Bennett").find('i').removeClass('glyphicon-unchecked');


            });
            $(".btn-Cowie").click(function () {
                $(".btn-Bennett").removeClass('btn-success'); $(".btn-Bennett").find('i').removeClass('glyphicon-check'); $(".btn-Bennett").find('i').addClass('glyphicon-unchecked');
                $(".btn-Bissette").removeClass('btn-success'); $(".btn-Bissette").find('i').removeClass('glyphicon-check'); $(".btn-Bissette").find('i').addClass('glyphicon-unchecked');
                $(".btn-Cowie").addClass('btn-success'); $(".btn-Cowie").find('i').addClass('glyphicon-check'); $(".btn-Cowie").find('i').removeClass('glyphicon-unchecked');


            });
            $(".btn-Bissette").click(function () {
                $(".btn-Bennett").removeClass('btn-success'); $(".btn-Bennett").find('i').removeClass('glyphicon-check'); $(".btn-Bennett").find('i').addClass('glyphicon-unchecked');
                $(".btn-Cowie").removeClass('btn-success'); $(".btn-Cowie").find('i').removeClass('glyphicon-check'); $(".btn-Cowie").find('i').addClass('glyphicon-unchecked');
                $(".btn-Bissette").addClass('btn-success'); $(".btn-Bissette").find('i').addClass('glyphicon-check'); $(".btn-Bissette").find('i').removeClass('glyphicon-unchecked');
                
            });

            $(".mapLink").click(function () {
                if ($(".btn-Bennett").hasClass("btn-success")) {
                    this.href += "#12/55.2742/-121.1105/";
                }
                else if ($(".btn-Cowie").hasClass("btn-success")) {
                    this.href += "#12/55.5849/-121.4497/";
                }
                else if ($(".btn-Bissette").hasClass("btn-success")) {
                    this.href += "#12/55.6715/-120.3284/";
                }
            });
        });
    </script>
}
<div class="jumbotron dashboard-jumbotron">
    <div class="container">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="btn-group btn-group-lg" role="group" aria-label="" style="padding-bottom: 10px;">
                    <button type="button" class="btn btn-default btn-success btn-Bissette"><i class="glyphicon glyphicon-check"></i> Bissette</button>
                    <button type="button" class="btn btn-default btn-Cowie"><i class="glyphicon glyphicon-unchecked"></i> Cowie</button>
                    <button type="button" class="btn btn-default btn-Bennett"><i class="glyphicon glyphicon-unchecked"></i> Bennett</button>
                </div>
            </div>
        </div>
    </div>
        <div class="container">
            <!-- Example row of columns -->
            <div class="row">
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Base Map</h3>
                        </div>
                        <div class="panel-body">
                            <ul>
                                <li><a class="mapLink" href="@Url.Action("Index", "Home", new { site = site.urlParameter, view = "basemap" })">Base Map</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Vegetation</h3>
                        </div>
                        <div class="panel-body">
                            <ul>
                                <li><a class="mapLink" href="@Url.Action("Index", "Home", new { site = site.urlParameter, view = "vegetation" })">Vegetation Map</a></li>
                                <li><a class="mapLink" href="@Url.Action("Index", "Home", new { site = site.urlParameter, view = "wetlands" })">Wetlands Map</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Wildlife</h3>
                        </div>
                        <div class="panel-body">
                            <ul>
                                <li><a class="mapLink" href="@Url.Action("Index", "Home", new { site = site.urlParameter, view = "wildlife" })">Wildlife Map</a></li>                                
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Archaeology</h3>
                        </div>
                        <div class="panel-body">
                            <ul>
                                <li><a class="mapLink" href="@Url.Action("Index", "Home", new { site = site.urlParameter, view = "archaeology" })">Archaeology Map</a></li>                                
                            </ul>
                        </div>
                    </div>
                </div>				
				
            </div>
        </div>
    </div>


