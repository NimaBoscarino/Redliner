@{
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;

    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    bool showViewDisplayName = false;
    if (controllerName == "Home" && actionName == "Index")
    {
        showViewDisplayName = true;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    @Html.Partial("_CommonHeadSection")        
    
</head>
<body>   
    @Html.Partial(site.TopNavigationControlPath)
    @if (showViewDisplayName && !string.IsNullOrEmpty(site.ViewDisplayName))
    {
        
        <div class="view-page-title container-fluid">
            <h1>@site.ViewDisplayName</h1>
        </div>
        
    }
    <div class="container-fluid">
        <div class="container-fluid">
            
            @RenderBody()
            </div>
        </div>    
    <p>&nbsp;</p>
    
    @Html.Partial("_CommonScripts")
    @RenderSection("HeaderScriptsArea", false)

</body>
</html>
