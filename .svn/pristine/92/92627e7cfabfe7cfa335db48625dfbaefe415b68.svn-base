using System;
using System.Text;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace Hatfield.WebMap.Domain.Layers
{
    public class GoogleMapsLayer : IMapLayer
    {
        public string Url
        {
            get;
            set;
        }

        public bool RequiresAuthentication
        {
            get;
            set;
        }

        public string DisplayName
        {
            get;
            set;
        }

        public bool InitiallyVisible
        {
            get;
            set;
        }

        public bool Queryable
        {
            get { return false; }
        }

        public string MapType
        {
            get;
            set;
        }

        public string getJavascriptCreateStatement(string jsVarNameToCreate, WebMappingSite site)
        {
            StringBuilder sb = new StringBuilder();
            sb.AppendLine(jsVarNameToCreate + " = L.gridLayer.googleMutant({ type: '" + MapType + "'});");

            return sb.ToString();
        }

        public string getAuthToken(TokenMode mode)
        {
            return "";
        }


    }
}