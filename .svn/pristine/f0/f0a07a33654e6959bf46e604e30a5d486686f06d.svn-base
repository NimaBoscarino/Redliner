@using System.Web.Mvc
@model Hatfield.WebMap.ViewModels.LoginModel
@{
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getViewLayoutPath();
    
    ViewBag.Title = "Please Log In";
}
@section HeaderScriptsArea
{
    <script>
        $(document).ready(function () {
            var un = $("#UserName").val();
            if (un == "") {                
                $("#UserName").focus();
            }
            else
                $("#Password").focus();
        });

    </script>
}
<div class="LoginPageContent">
    <div class="page-header">
        <h1>@ViewBag.Title</h1>
    </div>
    <p><em>Please Log in with the username and password provided</em></p>
    <p>&nbsp;</p>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true, "Login failed. Check your login details.");
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">
                @Html.LabelFor(u => u.UserName)
            </label>
            <div class="col-sm-4">
                @Html.TextBoxFor(u => u.UserName, new { placeholder = "Username", @class = "form-control" })
                @Html.ValidationMessageFor(u => u.UserName)
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">
                @Html.LabelFor(u => u.Password)
            </label>
            <div class="col-sm-4">
                @Html.PasswordFor(u => u.Password, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>



        <p><em>If you require assistance logging in, please contact <a href="mailto:hcp@hatfieldgroup.com">Hatfield Consultants</a></em></p>
    }
</div>