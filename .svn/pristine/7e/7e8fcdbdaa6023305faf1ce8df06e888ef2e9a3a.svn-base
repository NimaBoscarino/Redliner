@{
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getViewLayoutPath();
    
    ViewBag.Title = "Logged Out";
}

<div class="jumbotron logout-jumbotron">
    <h1><i class="glyphicon glyphicon-ok-sign"></i> Logged Out</h1>
    <p class="lead">@site.LoggedOutMessage</p>    
    <p><a href="@Url.Action("Login")" class="btn btn-primary btn-lg">Log in again &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        
        <p><em>@Html.Raw(site.LoggedOutHelpMessage)</em></p>        
    </div>

</div>