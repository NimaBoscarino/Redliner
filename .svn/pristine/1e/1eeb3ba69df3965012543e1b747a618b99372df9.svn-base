@model Hatfield.WebMap.Domain.BienHoaData.CLEANUP_LEVELS

@{
    ViewBag.Title = "Edit Soil/Sediment Exceedance Limit for DU '" + @Model.DU + "'";
    Hatfield.WebMap.Domain.WebMappingSite site = ViewBag.site;
    Layout = site.getSiteSpecificLayoutPath();

    Hatfield.WebMap.Repositories.DUOrigionalLimitRepository origLimitRepo = new Hatfield.WebMap.Repositories.DUOrigionalLimitRepository();
    var origLimit = origLimitRepo.FetchAll().Where(x => x.OBJECTID == Model.OBJECTID).FirstOrDefault();
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OBJECTID)


        <div class="form-group">
            @Html.LabelFor(model => model.Matrix, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Matrix, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LandUse, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.LandUse, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>        

        <div class="form-group">
            @Html.LabelFor(model => model.TEQLimit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.TEQLimit, new { htmlAttributes = new { @class = "form-control" } })
                @if (origLimit != null && origLimit.OrigionalLimit != null)
                {
                    <span>(Original limit: @origLimit.OrigionalLimit.Value.ToString("N2"))</span>
                }
                @Html.ValidationMessageFor(model => model.TEQLimit, "", new { @class = "text-danger" })
            </div>
        </div>


        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" /> | @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

<div>
    
</div>
